{% comment %}
    Renders cart notification

    Accepts:
    - color_scheme: {String} sets the color scheme of the notification (optional)

    Usage:
    {% render 'cart-notification' %}
{% endcomment %}

<div
  class="cart is-inverted"
  style="transform: translateX(100%) translateZ(0)"
  >
  <div class="cart--inner">
    <div class="cart--header">
      <div class="cart--title">
        Your Cart <span class="cart--count">0</span>
      </div>
      <button class="cart-toggle">Done</button>
    </div>
    {% comment %} <div class="cart--content">
      <div class="cart--empty"><p>Your cart is empty</p></div>
    </div> {% endcomment %}
    <div class="cart--content">
      <div class="cart--items">
         <div class="cart-item">
            <figure class="cart-item--photo">
               <div class="ar" style="padding-top: 100%;">
                  <picture><img sizes="(min-width: 768px) 400px, 35vw'" decoding="async" alt="bucket hat by paul smith in navy colour" class="object-cover is-loaded" src="https://cdn.sanity.io/images/4y2xd5ik/production/c21a40d8f835a122320d2cdb8d433289e4588e1f-1100x1100.png?q=80&amp;fit=max&amp;auto=format" srcset="https://cdn.sanity.io/images/4y2xd5ik/production/c21a40d8f835a122320d2cdb8d433289e4588e1f-1100x1100.png?w=400&amp;h=400&amp;q=80&amp;fit=max&amp;auto=format 400w,https://cdn.sanity.io/images/4y2xd5ik/production/c21a40d8f835a122320d2cdb8d433289e4588e1f-1100x1100.png?w=800&amp;h=800&amp;q=80&amp;fit=max&amp;auto=format 800w,https://cdn.sanity.io/images/4y2xd5ik/production/c21a40d8f835a122320d2cdb8d433289e4588e1f-1100x1100.png?w=1000&amp;h=1000&amp;q=80&amp;fit=max&amp;auto=format 1000w"></picture>
                  <div class="ar--placeholder is-loaded"><img src="data:image/png;base64," alt="" role="presentation"></div>
               </div>
            </figure>
            <div class="cart-item--details">
               <div class="cart-item--header">
                  <div class="cart-item--title">
                     <div class="cart-item--variant">L / 47_NAVY</div>
                     <h2 class="cart-item--name"><a class="cart-item--link" href="/products/m2a-751f-fh638?variant=40279333470373">Paul Smith Navy Bucket Hat</a></h2>
                  </div>
                  <div class="price"><span class="price--current">€78</span></div>
               </div>
               <div class="cart-item--tools">
                  <div class="cart-item--quantity">
                     <div class="counter is-small is-inverted">
                        <button aria-label="Decrease quantity by one" class="counter--down">
                           <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100" aria-labelledby="minus-40279333470373" class="icon">
                              <title id="minus-40279333470373">Minus</title>
                              <rect x="20" y="46" width="60" height="8"></rect>
                           </svg>
                        </button>
                        <div class="counter--amount">
                           <div class="counter--input" style="transform: translateY(0%) translateZ(0px);"><input aria-label="Manually enter quantity" type="number" inputmode="numeric" min="1" value="1"></div>
                        </div>
                        <button aria-label="Increase quantity by one" class="counter--up">
                           <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100" aria-labelledby="plus-40279333470373" class="icon">
                              <title id="plus-40279333470373">Plus</title>
                              <polygon points="80 46 54 46 54 20 46 20 46 46 20 46 20 54 46 54 46 80 54 80 54 54 80 54 80 46"></polygon>
                           </svg>
                        </button>
                     </div>
                  </div>
                  <button class="btn is-text">Remove</button>
               </div>
            </div>
         </div>
         <div class="cart-item">
            <figure class="cart-item--photo">
               <div class="ar" style="padding-top: 100%;">
                  <picture><img sizes="(min-width: 768px) 400px, 35vw'" decoding="async" alt="mini cooper with paul smith stripes car model" class="object-cover is-loaded" src="https://cdn.sanity.io/images/4y2xd5ik/production/b411e515c9afdafa9b9d51f1fad07cac11aa0079-1100x1100.png?q=80&amp;fit=max&amp;auto=format" srcset="https://cdn.sanity.io/images/4y2xd5ik/production/b411e515c9afdafa9b9d51f1fad07cac11aa0079-1100x1100.png?w=400&amp;h=400&amp;q=80&amp;fit=max&amp;auto=format 400w,https://cdn.sanity.io/images/4y2xd5ik/production/b411e515c9afdafa9b9d51f1fad07cac11aa0079-1100x1100.png?w=800&amp;h=800&amp;q=80&amp;fit=max&amp;auto=format 800w,https://cdn.sanity.io/images/4y2xd5ik/production/b411e515c9afdafa9b9d51f1fad07cac11aa0079-1100x1100.png?w=1000&amp;h=1000&amp;q=80&amp;fit=max&amp;auto=format 1000w"></picture>
                  <div class="ar--placeholder is-loaded"><img src="data:image/png;base64," alt="" role="presentation"></div>
               </div>
            </figure>
            <div class="cart-item--details">
               <div class="cart-item--header">
                  <div class="cart-item--title">
                     <div class="cart-item--variant">Default Title</div>
                     <h2 class="cart-item--name"><a class="cart-item--link" href="/products/paul-smith-mini-cooper-figure?variant=40313456328869">Paul Smith Mini Cooper Car Model</a></h2>
                  </div>
                  <div class="price"><span class="price--current">€52</span></div>
               </div>
               <div class="cart-item--tools">
                  <div class="cart-item--quantity">
                     <div class="counter is-small is-inverted">
                        <button aria-label="Decrease quantity by one" class="counter--down">
                           <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100" aria-labelledby="minus-40313456328869" class="icon">
                              <title id="minus-40313456328869">Minus</title>
                              <rect x="20" y="46" width="60" height="8"></rect>
                           </svg>
                        </button>
                        <div class="counter--amount">
                           <div class="counter--input" style="transform: translateY(0%) translateZ(0px);"><input aria-label="Manually enter quantity" type="number" inputmode="numeric" min="1" value="1"></div>
                        </div>
                        <button aria-label="Increase quantity by one" class="counter--up">
                           <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100" aria-labelledby="plus-40313456328869" class="icon">
                              <title id="plus-40313456328869">Plus</title>
                              <polygon points="80 46 54 46 54 20 46 20 46 46 20 46 20 54 46 54 46 80 54 80 54 54 80 54 80 46"></polygon>
                           </svg>
                        </button>
                     </div>
                  </div>
                  <button class="btn is-text">Remove</button>
               </div>
            </div>
         </div>
      </div>
   </div>
  </div>
  </div>
  <div class="cart--backdrop"></div>
  </div>
